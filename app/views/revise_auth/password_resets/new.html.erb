<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-lg">
    <h1 class="text-center text-2xl font-bold text-primary-600 dark:text-primary-dark-600 sm:text-3xl">
      <%= t(".send_password_reset_instructions") %>
    </h1>

    <p class="mx-auto mt-4 max-w-md text-center text-gray-500">
      <%= t(".password_reset_description") %>
    </p>

    <%= form_with model: @user, url: password_resets_path, class: "bg-white dark:bg-slate-800 mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8" do |form| %>
      <% if form.object.errors.any? %>
        <div class="bg-red-50 text-red-500 px-4 py-2 rounded">
          <ul class="list-disc list-inside">
            <% form.object.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "sr-only dark:text-slate-400" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm dark:bg-gray-100", placeholder: "Enter email" %>
      </div>

      <%= form.button t(".send_password_reset_instructions"), class: "block w-full rounded-lg bg-primary-600 px-5 py-3 text-sm font-medium text-white" %>

      <p class="text-center text-sm text-gray-500">
        <%= link_to t(".back_to_log_in"), login_path, class: "underline" %>
      </p>
    <% end %>
  </div>
</div>
