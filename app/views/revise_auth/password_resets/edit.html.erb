<h1><%=t ".reset_password" %></h1>

<%= form_with model: @user, url: password_reset_path do |form| %>
  <% if form.object.errors.any? %>
    <ul>
      <% form.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :password, class: "dark:text-slate-400" %>
    <%= form.password_field :password, required: true, class: "dark:bg-gray-100" %>
  </div>

  <div>
    <%= form.label :password_confirmation, class: "dark:text-slate-400" %>
    <%= form.password_field :password_confirmation, required: true, class: "dark:bg-gray-100" %>
  </div>

  <div>
    <%= form.button t(".reset_password") %>
  </div>
<% end %>
