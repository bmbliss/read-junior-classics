<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Children</h1>
  
  <%= link_to 'Add New Child', new_user_child_path(@user), class: 'bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded mb-4 inline-block' %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @children.each do |child| %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= child.name %></h2>
        <p class="text-gray-600 mb-4">Grade: <%= child.grade_level %></p>
        <%= link_to 'View', user_child_path(@user, child), class: 'text-primary-500 hover:text-primary-600 mr-2' %>
      </div>
    <% end %>
  </div>
</div>
