<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= @child.name %></h1>
  
  <div class="bg-white shadow rounded-lg p-6">
    <p class="text-gray-600 mb-4">Grade: <%= @child.grade_level %></p>
    
    <%= link_to 'Edit', edit_user_child_path(@user, @child), class: 'bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded mr-2' %>
    <%= link_to 'Back to Children', user_children_path(@user), class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded' %>
  </div>
</div>
