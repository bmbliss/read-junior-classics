<div class="container mx-auto">
  <h1 class="text-3xl font-bold my-6 text-primary-600 dark:text-primary-dark-600"><%= @child.name %></h1>
  
  <div class="bg-white dark:bg-slate-800 shadow rounded-lg p-6 mb-8">
    <p class="text-gray-600 dark:text-slate-400 mb-4">Grade: <%= @child.grade_level %></p>
    
    <%= link_to 'Edit', edit_user_child_path(@user, @child), class: 'text-primary-500 hover:text-primary-600 dark:text-primary-dark-600 mr-2' %>
    <%= button_to 'Delete', user_child_path(@user, @child), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'text-red-500 hover:text-red-600' %>
  </div>

  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-primary-600 dark:text-primary-dark-600"><%= @child.name %>'s Reading Programs</h2>
    <%= link_to "Enroll in a new program", new_program_enrollment_path(child_id: @child.id), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white dark:bg-slate-800 shadow rounded-lg p-6">
    <% if @child.program_enrollments.any? %>
      <ul class="divide-y divide-gray-200">
        <% @child.program_enrollments.each do |enrollment| %>
          <li class="py-4">
            <h3 class="text-xl font-semibold dark:text-white"><%= enrollment.program.name %></h3>
            <p class="text-gray-600 dark:text-slate-400 mb-2">Grade <%= enrollment.program.recommended_grade %></p>
            <p class="text-gray-600 dark:text-slate-400 mb-2">Progress: <%= enrollment.progress_percentage %>% complete</p>
            
            <h4 class="font-semibold mt-2 mb-1 dark:text-white">Recent Readings:</h4>
            <ul class="list-disc list-inside">
              <% enrollment.reading_entries.order(date_read: :desc).limit(5).each do |entry| %>
                <li class="text-sm text-gray-600 dark:text-slate-400">
                  <%= entry.literary_work.title %> - 
                  Read on: <%= entry.date_read.strftime("%B %d, %Y") %> - 
                  Rating: <%= entry.rating || 'Not rated' %>
                </li>
              <% end %>
            </ul>
            
            <%= link_to "Manage Progress", program_enrollment_path(enrollment), class: "mt-2 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-600 dark:text-slate-400">Not enrolled in any programs yet.</p>
    <% end %>
  </div>
</div>
