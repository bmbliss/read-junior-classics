<div class="container mx-auto">
  <h1 class="text-3xl font-bold my-6 text-primary-600 dark:text-primary-dark-600"><%= @child.name %></h1>
  
  <div class="bg-white dark:bg-slate-800 shadow rounded-lg p-6 mb-8">
    <p class="text-gray-600 dark:text-slate-400 mb-4">Grade: <%= @child.grade_level %></p>
    
    <%= link_to 'Edit', edit_user_child_path(@user, @child), 
        class: 'text-primary-500 hover:text-primary-600 dark:text-primary-dark-600 mr-2' %>
    <%= button_to 'Delete', user_child_path(@user, @child), 
        method: :delete, 
        form: { data: { turbo_confirm: 'Are you sure?' } }, 
        class: 'text-red-500 hover:text-red-600' %>
  </div>

  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-primary-600 dark:text-primary-dark-600">
      <%= @child.name %>'s Reading Progress
    </h2>
  </div>

  <%= render 'reading_progress', child: @child, show_details: true %>
</div>
