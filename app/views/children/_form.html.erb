<%= form_with(model: [user, child], local: true, class: 'space-y-4') do |form| %>
  <% if child.errors.any? %>
    <div class="bg-red-50 text-red-500 px-4 py-2 rounded mb-4">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>
      <ul class="list-disc list-inside">
        <% child.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.label :grade_level, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.number_field :grade_level, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.submit class: 'bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
