<div class="bg-white dark:bg-slate-800 rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-semibold text-primary-600 dark:text-primary-dark-600 mb-4"><%= child.name %></h2>
  <p class="text-gray-600 dark:text-slate-400 mb-4">Grade: <%= child.grade_level %></p>
  
  <% if child.program_enrollments.any? %>
    <h3 class="text-xl font-semibold mb-2 dark:text-white">Enrolled Programs</h3>
    <ul class="space-y-2">
      <% child.program_enrollments.each do |enrollment| %>
        <li>
          <div class="flex justify-between items-center">
            <span class="font-medium dark:text-slate-300"><%= enrollment.program.name %></span>
            <span class="text-sm text-gray-600 dark:text-slate-400">Progress: <%= enrollment.progress_percentage %>%</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2.5 mt-1">
            <div class="bg-primary-600 h-2.5 rounded-full" style="width: <%= enrollment.progress_percentage %>%"></div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600 dark:text-slate-400">Not enrolled in any programs yet.</p>
  <% end %>
  
  <%= link_to "View Details", user_child_path(current_user, child), class: "mt-4 inline-block bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-300" %>
</div>
