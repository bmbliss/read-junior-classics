<div class="bg-white dark:bg-slate-800 rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-semibold text-primary-600 dark:text-primary-dark-600 mb-2"><%= child.name %></h2>
  <p class="text-gray-600 dark:text-slate-400 mb-2">Grade: <%= child.grade_level %></p>
  
  <%= render "children/reading_progress", child: child, show_details: false %>
  
  <%= link_to "View Details", user_child_path(current_user, child), 
              class: "mt-4 inline-block bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-300" %>
</div>
