<%= form_with(model: literary_work, class: "contents") do |form| %>
  <% if literary_work.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(literary_work.errors.count, "error") %> prohibited this literary_work from being saved:</h2>

      <ul>
        <% literary_work.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title, class: "dark:text-slate-400" %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-100" %>
  </div>

  <div class="my-5">
    <%= form.label :author, class: "dark:text-slate-400" %>
    <%= form.text_field :author, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-100" %>
  </div>

  <div class="my-5">
    <%= form.label :work_type, class: "dark:text-slate-400" %>
    <%= form.text_field :work_type, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-100" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "dark:text-slate-400" %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-100" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to 'Cancel', :back, class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
