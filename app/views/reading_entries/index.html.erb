<div class="w-full">
  <% content_for :title, "Reading entries" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Reading entries</h1>
    <%= link_to "New reading entry", new_reading_entry_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="reading_entries" class="min-w-full">
    <% @reading_entries.each do |reading_entry| %>
      <%= render reading_entry %>
      <p>
        <%= link_to "Show this reading entry", reading_entry, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
