<%= form_with(model: reading_entry, class: "mb-4", data: { controller: "form" }) do |f| %>
  <%= f.hidden_field :literary_work_id %>
  <%= f.hidden_field :reader_id %>
  
  <div class="flex items-center gap-4">
    <span class="text-gray-700 dark:text-gray-300 font-medium">
      <%= reader == current_user ? "Your rating" : "#{reader.name}'s rating" %>:
    </span>
    
    <%= render "shared/star_rating_input",
          current_rating: reading_entry.rating || 0,
          field_name: "reading_entry[rating]" %>
  </div>
<% end %>
