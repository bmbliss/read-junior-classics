<% if user_signed_in? %>
  <h1 class="text-4xl font-bold text-center text-primary-600 dark:text-primary-dark-600 mb-8">Welcome to Read the Junior Classics</h1>

  <% if @children.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @children.each do |child| %>
        <%= render "children/child_card", child: child %>
      <% end %>
    </div>
  <% else %>
    <p class="text-xl text-center text-gray-600 dark:text-slate-400 mb-8">You haven't added any children yet.</p>
    <div class="flex justify-center">
      <%= link_to "Add a Child", new_user_child_path(current_user), class: "block mx-auto w-auto text-center bg-primary-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-primary-600 transition duration-300 ease-in-out transform hover:-translate-y-1" %>
    </div>
  <% end %>

  <%= render "featured" %>
<% else %>
  <h1 class="text-4xl font-bold text-center text-primary-600 dark:text-primary-dark-600 mb-8">Read the Junior Classics</h1>
  <p class="text-xl text-center text-gray-600 dark:text-slate-400 mb-12">Discover classic literature and track your children's reading progress with our curated reading programs.</p>

  <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4 mb-12">
    <%= link_to 'Sign Up', sign_up_path, class: 'w-full sm:w-auto bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1' %>
    <%= link_to 'Log In', login_path, class: 'w-full sm:w-auto bg-white dark:bg-slate-800 hover:bg-gray-100 text-primary-500 font-semibold py-3 px-6 rounded-lg border border-primary-500 transition duration-300 ease-in-out transform hover:-translate-y-1' %>
  </div>

  <%= render "featured" %>
<% end %>
