<div class="container mx-auto" data-controller="tabs">
  <div class="bg-white dark:bg-slate-800 shadow rounded-lg p-6 mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold mb-2 text-primary-600 dark:text-primary-dark-600"><%= @program_enrollment.program.name %></h1>
        <h2 class="text-xl font-semibold text-gray-600 dark:text-slate-400 mb-4"><%= @program_enrollment.child.name %>'s Progress</h2>
        <p class="text-gray-600 dark:text-slate-400 mb-2">Total Literary Works: <%= @program_enrollment.program.program_items.count %></p>
        <p class="text-gray-600 dark:text-slate-400 text-md font-normal mb-2">Estimated Reading Time: <%= @program_enrollment.program.total_reading_time %></p>
        <p class="text-gray-600 dark:text-slate-400 mb-2"><span id="program-progress-percentage"><%= @program_enrollment.progress_percentage %></span>% complete</p>
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div class="bg-primary-600 h-2.5 rounded-full" style="width: <%= @program_enrollment.progress_percentage %>%"></div>
        </div>
      </div>
      <%= button_to 'Unenroll', program_enrollment_path(@program_enrollment), method: :delete, data: { turbo_confirm: 'Are you sure you want to unenroll from this program?' }, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex" aria-label="Tabs">
        <button data-tabs-target="tab" data-action="click->tabs#switch" data-tab="incomplete" class="border-primary-500 text-primary-600 dark:text-primary-dark-600 whitespace-nowrap py-4 px-4 border-b-2 font-medium text-sm">
          Incomplete
        </button>
        <button data-tabs-target="tab" data-action="click->tabs#switch" data-tab="complete" class="border-transparent text-gray-500 hover:text-gray-600 dark:text-slate-400 hover:border-gray-300 whitespace-nowrap py-4 px-4 border-b-2 font-medium text-sm">
          Complete
        </button>
      </nav>
    </div>
  </div>

  <div data-tabs-target="panel" data-tab="incomplete">
    <h3 class="text-xl font-semibold mb-4 dark:text-white">Incomplete Items</h3>
    <% @program_enrollment.program.program_items.each do |program_item| %>
      <% unless @program_enrollment.reading_entries.completed.exists?(literary_work: program_item.literary_work) %>
        <%= render 'program_item', program_item: program_item, program_enrollment: @program_enrollment, completed: false %>
      <% end %>
    <% end %>
  </div>

  <div data-tabs-target="panel" data-tab="complete" class="hidden">
    <h3 class="text-xl font-semibold mb-4 dark:text-white">Completed Items</h3>
    <% @program_enrollment.program.program_items.each do |program_item| %>
      <% if @program_enrollment.reading_entries.completed.exists?(literary_work: program_item.literary_work) %>
        <%= render 'program_item', program_item: program_item, program_enrollment: @program_enrollment, completed: true %>
      <% end %>
    <% end %>
  </div>
</div>
