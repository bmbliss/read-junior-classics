<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-6">Program Enrollments</h1>

  <% if @program_enrollments.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @program_enrollments.each do |enrollment| %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2"><%= enrollment.child.name %></h2>
          <p class="text-gray-600 mb-2">Program: <%= enrollment.program.name %></p>
          <p class="text-gray-600 mb-4">Progress: <%= enrollment.progress_percentage %>% complete</p>
          <%= link_to 'View Details', program_enrollment_path(enrollment), class: 'text-primary-500 hover:text-primary-600' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No program enrollments found.</p>
  <% end %>

  <%= link_to 'Enroll in a New Program', new_program_enrollment_path, class: 'mt-6 inline-block bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded' %>
</div>
