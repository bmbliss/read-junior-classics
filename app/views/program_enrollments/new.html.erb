<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-6">Enroll in a New Program</h1>

  <%= form_with(model: @program_enrollment, local: true, class: 'max-w-md') do |form| %>
    <% if @program_enrollment.errors.any? %>
      <div class="bg-red-50 text-red-500 px-4 py-3 rounded mb-4">
        <h2><%= pluralize(@program_enrollment.errors.count, "error") %> prohibited this enrollment from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @program_enrollment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :child_id, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.collection_select :child_id, current_user.children, :id, :name, {prompt: 'Select a child'}, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-4">
      <%= form.label :program_id, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.collection_select :program_id, Program.all, :id, :name, {prompt: 'Select a program'}, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit 'Enroll', class: 'bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= link_to 'Cancel', program_enrollments_path, class: 'inline-block align-baseline font-bold text-sm text-primary-500 hover:text-primary-800' %>
    </div>
  <% end %>
</div>
