<div class="flex items-center gap-2" data-controller="star-rating">
  <% 5.times do |i| %>
    <%= button_tag type: "button",
        class: "text-2xl focus:outline-none",
        data: {
          action: "star-rating#rate",
          "star-rating-target": "star",
          "star-rating-index-value": i + 1,
          "star-rating-current-value": current_rating
        } do %>
      <span class="<%= i < current_rating ? 'text-yellow-400' : 'text-gray-300' %>">â˜…</span>
    <% end %>
  <% end %>
  <%= hidden_field_tag field_name, current_rating, data: { "star-rating-target": "input" } %>
</div> 