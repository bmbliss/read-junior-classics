<% flash.each do |type, message| %>
  <div class="<%= flash_class(type) %> px-4 py-3 rounded-lg shadow-md mb-4" role="alert">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <%= flash_icon(type) %>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium"><%= message %></p>
      </div>
    </div>
  </div>
<% end %>
