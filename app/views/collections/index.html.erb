<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-6 text-primary-600 dark:text-primary-dark-600">Collections</h1>
  
  <%= link_to "New Collection", new_collection_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @collections.each do |collection| %>
      <%= render 'collections/collection_card', collection: collection %>
    <% end %>
  </div>
</div>
