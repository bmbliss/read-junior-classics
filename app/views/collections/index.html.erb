<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Collections</h1>
  
  <%= link_to "New Collection", new_collection_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @collections.each do |collection| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= collection.name %></h2>
        <p class="text-gray-600 mb-4"><%= truncate(collection.description, length: 100) %></p>
        <%= link_to "View", collection_path(collection), class: "text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
