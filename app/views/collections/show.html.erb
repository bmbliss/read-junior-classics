<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= @collection.name %></h1>
  
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <p class="text-gray-600 mb-4"><%= @collection.description %></p>
  </div>
  
  <h2 class="text-2xl font-semibold mb-4">Literary Works</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @collection.literary_works.each do |work| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-2"><%= work.title %></h3>
        <p class="text-gray-600 mb-2">By <%= work.author %></p>
        <p class="text-gray-500">Type: <%= work.work_type.titleize %></p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to "Edit", edit_collection_path(@collection), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
    <%= link_to "Back to Collections", collections_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
