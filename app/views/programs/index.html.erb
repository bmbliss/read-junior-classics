<div class="w-full">
  <% content_for :title, "Programs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Programs</h1>
    <%= link_to "New program", new_program_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="programs" class="min-w-full">
    <% @programs.each do |program| %>
      <%= render program %>
      <p>
        <%= link_to "Show this program", program, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
